<h1>Novo Modelo de Carro</h1>

<%= form_for @car_model do |form|%>
  <p>
    <%= form.label :name, 'Nome' %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :motorization, 'Motorização' %><br>
    <%= form.text_field :motorization %>
  </p>
  <p>
    <%= form.label :year, 'Ano' %><br>
    <%= form.text_field :year %>
  </p>
  <p>
    <%= form.label :fuel_type, 'Combustível' %><br>
    <%= form.text_field :fuel_type %>
  </p>

  <div>
    <%= form.label :manufacturer_id, 'Fabricante' %>
    <%= form.collection_select(:manufacturer_id, @manufacturers, :id, :name )%>
  </div>
  <div>
    <%= form.label :car_category_id, 'Categoria' %>
    <%= form.collection_select(:car_category_id, @car_categories, :id, :name )%>
  </div>

  <%= form.submit 'Enviar'%>
<% end %>
