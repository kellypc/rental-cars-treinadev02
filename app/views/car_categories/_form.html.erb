<div style="margin-left: 200px">
  
  <% if @car_category.errors.any? %>
    <p>Você deve corrigir os seguintes erros:</p>
    <ul>
      <% @car_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @car_category, local: true do |form| %>
    <p>
      <%= form.label :name, 'Nome' %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :daily_rate, 'Diária' %><br>
      <%= form.text_field :daily_rate %>
    </p>
    <p>
      <%= form.label :car_insurance, 'Seguro do carro' %><br>
      <%= form.text_field :car_insurance %>
    </p>
    <p>
      <%= form.label :third_party_insurance, 'Seguradora de terceiros' %><br>
      <%= form.text_field :third_party_insurance %>
    </p>
    <p>
      <%= form.submit 'Enviar' %>
    </p>
  <% end %>

  <%= link_to 'Voltar', car_categories_path %>

</div>
